{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
  "extends": [
    "airbnb",
    "prettier" // disables all conflicting rules
  ],
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-filename-extension": "off",
        "react/prop-types": "off",
        "react/jsx-indent": 4,
        "react/jsx-indent-props":4,
        "eqeqeq": "off",
        "linebreak-style": "off",
        "arrow-parens": "off",
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "to" ]
        }],
        "no-nested-ternary":"off",
        "react/prefer-stateless-function": "off"
    }
}

